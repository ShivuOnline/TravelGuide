<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/std_10_dp"
    tools:context=".views.gallery.PhotoViewer">

    <TextView
        android:id="@+id/text_place_header"
        style="@style/AppTheme.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/std_10_dp"
        android:hint="Place"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/std_18_sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_260_dp"
        android:layout_below="@+id/text_place_header"
        android:layout_margin="@dimen/std_10_dp"
        android:contentDescription="Photo"
        android:src="@drawable/empty_image" />

    <LinearLayout
        android:id="@+id/photo_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_image"
        android:layout_marginTop="@dimen/std_10_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name_header"
            style="@style/AppTheme.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/std_10_dp"
            android:text="Name : "
            android:layout_weight="2.1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/std_16_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_photo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo_image"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:hint="Photo name"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_capture_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_name_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_photo_capture_date_header"
            style="@style/AppTheme.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/std_10_dp"
            android:text="Date : "
            android:layout_weight="2.1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/std_16_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_photo_capture_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:hint="Photo captured date"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_user_comments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_capture_date_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_user_comments_header"
            style="@style/AppTheme.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/std_10_dp"
            android:text="Comments : "
            android:layout_weight="2.1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/std_16_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:hint="User comments"
            android:layout_weight="1"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_user_comments_layout"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_all_radius_rounded_deep_corner"
        android:gravity="center"
        android:text="Back"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/std_18_sp"
        android:textStyle="bold" />


</RelativeLayout>