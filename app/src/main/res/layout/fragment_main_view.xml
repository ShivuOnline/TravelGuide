<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:transitionName="@string/transaction_name"
    tools:context=".views.main.MainViewActivity">

    <ImageView
        android:id="@+id/places_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_240_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_image"
        android:transitionName="places" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_header_secondary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/std_50_dp"
                android:layout_marginTop="@dimen/std_240_dp"
                android:background="@color/colorPrimary"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:textColor="@color/white"
                android:textSize="@dimen/std_18_sp" />

            <TextView
                android:id="@+id/places_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_300_dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="left"
                android:lineSpacingExtra="@dimen/std_6_dp"
                android:paddingStart="@dimen/std_10_dp"
                android:paddingLeft="@dimen/std_10_dp"
                android:paddingEnd="@dimen/std_2_dp"
                android:paddingRight="@dimen/std_2_dp"
                android:textColor="@color/black"
                android:textSize="@dimen/std_16_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/places_description"
                android:layout_marginTop="@dimen/std_20_dp"
                android:layout_marginBottom="@dimen/std_40_dp"
                android:layout_marginStart="@dimen/std_10_dp"
                android:layout_marginEnd="@dimen/std_10_dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_google_info"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/google_info_item_cardview"
                        android:layout_width="100dp"
                        android:layout_height="98dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="12dp"
                        android:innerRadius="40dp"
                        android:shape="ring"
                        android:thicknessRatio="4"
                        app:cardCornerRadius="75dp">

                        <ImageView
                            android:id="@+id/google_info_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_google_info_icon"
                            android:contentDescription="Google info icon"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_google_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="More Info"
                        android:layout_marginTop="@dimen/std_10_dp"
                        android:textSize="@dimen/std_16_sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_gmap_direction"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gmap_direction_item_cardview"
                        android:layout_width="100dp"
                        android:layout_height="98dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="12dp"
                        android:innerRadius="40dp"
                        android:shape="ring"
                        android:thicknessRatio="4"
                        app:cardCornerRadius="75dp">

                        <ImageView
                            android:id="@+id/gmap_direction_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_gmap_direction_icon"
                            android:contentDescription="GMap Direction" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_gmap_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/std_10_dp"
                        android:textSize="@dimen/std_16_sp"
                        android:gravity="center"
                        android:text="Direction"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_photo_upload"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/photo_upload_item_cardview"
                        android:layout_width="100dp"
                        android:layout_height="98dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="12dp"
                        android:innerRadius="40dp"
                        android:shape="ring"
                        android:thicknessRatio="4"
                        app:cardCornerRadius="75dp">

                        <ImageView
                            android:id="@+id/photo_upload_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_gallery_main"
                            android:contentDescription="Photo Upload" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_photo_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/std_10_dp"
                        android:textSize="@dimen/std_16_sp"
                        android:gravity="center"
                        android:text="Photo Upload"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_header_primary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="left|center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/std_18_sp" />

</RelativeLayout>